{% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <header class="bg-white">
        <div class="container">
            <div class="row">
                <div class="col-12 d-flex align-items-center">
                    <h1><a class="logo" href="/">Warwick Estates</a></h1>
                    <span class="icon-menu icon icon-24"></span>
                </div>
            </div>
        </div>
    </header>

    <section class="nav">
        <div class="top">
            <div class="close-icon"><span></span></div>
        </div>
        <nav>
            <ul>
                <li><a target="_self" href="/"
                       title="Home">Dashboard</a>
                </li>

                {% if is_granted('ROLE_CUSTOMER|PAY') %}
                    <li><a target="_self"
                           href="/payments"
                           title="Make Payment">Make
                            Payment</a>
                    </li>
                {% endif %}

                {% if is_granted('ROLE_CUSTOMER|REPORTS') %}
                    <li>
                        <a href="" class="toggle">
                            <i class="icon-report"></i>
                            <span>Reports</span>
                            <div class="dropdown icon-divider"></div>
                        </a>
                        <ul>

                            {% if is_granted('ROLE_CUSTOMER|STATEMENT') %}
                                <li role="presentation">
                                    <a
                                            href="/statement" title="Statement of Account">Statement of Account</a>
                                </li>
                            {% endif %}

                            {% if is_granted('ROLE_CUSTOMER|REPORTS|BANK') %}
                                <li role="presentation"><a
                                            href="/reports/bank-statement" title="Bank Statement" class="action ">Bank
                                        Statement</a></li>
                            {% endif %}

                            {% if is_granted('ROLE_CUSTOMER|REPORTS|DEBTORS') %}
                                <li role="presentation"><a
                                            href="/reports/debtors" title="Debtors Report" class="action ">Debtors
                                        Report</a>
                                </li>
                            {% endif %}

                            {% if is_granted('ROLE_CUSTOMER|REPORTS|SPEND') %}
                                <li role="presentation"><a
                                            href="/reports/spend" title="Spend Report" class="action ">Spend
                                        Report</a>
                                </li>
                            {% endif %}

                            {% if is_granted('ROLE_CUSTOMER|REPORTS|BUDGETSPEND') %}
                                <li role="presentation"><a
                                            href="/reports/budget-versus-spend" title="Budget vs Spend"
                                            class="action ">Budget
                                        vs Spend</a></li>
                            {% endif %}
                        </ul>
                    </li>
                {% else %}

                    {% if is_granted('ROLE_CUSTOMER|STATEMENT') %}
                        <li><a target="_self"
                               href="/statement"
                               title="Statement of Account">Statement
                                of Account</a></li>
                    {% endif %}

                {% endif %}

                {% if is_granted('ROLE_CUSTOMER|DOCUMENTS') %}
                    <li><a target="_self"
                           href="/documents"
                           title="Downloads">Documents</a>
                    </li>
                {% endif %}

                {% if is_granted('ROLE_CUSTOMER|ISSUES') %}
                    <li><a target="_self" href="/issues"
                           title="Issues">Issues</a></li>
                {% endif %}

                {% if is_granted('ROLE_CUSTOMER|ACCOUNT') %}
                    <li><a target="_self" href="/account"
                           title="Account Details">Account
                            Details</a>
                    </li>
                {% endif %}

                <li><a href="/logout">Logout</a></li>
            </ul>
        </nav>
    </section>
{% endif %}

