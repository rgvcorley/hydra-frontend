{% extends "CustomerAppBundle::layout.html.twig" %}

{% block menu %}
    {% include 'CustomerAppBundle::menu.html.twig' %}
{% endblock %}
{% block content %}
    {% include 'CustomerAppBundle:Partials:notification.html.twig' with {'notifications': 3} %}
    {% include 'CustomerAppBundle:Partials:breadcrumb.html.twig' with {'crumblink':'Dashboard', 'link':'/'} %}


    <!-- normal user -->
    <div class="container padding-bottom-30 padding-bottom-sm-40">
        <div class="row">
            <div class="col-md-9 text-center text-sm-left">
                <h1 class="fc-primary d-sm-inline">Hi Rob.</h1>
                <h1 class="fc-grey-7 d-sm-inline">Welcome to your dashboard.</h1>
                <p class="padding-top-15 padding-top-md-10">Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                    Fusce dignissim vehicula facilisis. Nunc enim velit, tempor in pellentesque in, porta eu nisi.</p>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row hidden-md-down">
            <div class="col-12">
                <div class="default-box primary-border d-sm-flex align-items-center justify-content-center text-center padding-top-30 padding-bottom-35 padding-top-md-35 padding-bottom-md-40 margin-bottom-10 margin-bottom-sm-30">
                    <div>
                        <h3 class="fc-grey-1 fw-700 d-sm-inline">Notice any problems?</h3>
                        <h3 class="fc-grey-3 fw-500 padding-right-sm-20 padding-bottom-20 padding-bottom-md-0 d-sm-inline">
                            Please help up invesitage your issue by reporting it.</h3>
                    </div>

                    <a href="#" class="btn btn-cyan ">Report Issue</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="default-box primary-border d-flex small-ticket dashboard-height margin-bottom-10 margin-bottom-sm-30">
                    <span class="fc-grey-8 large-text">23</span>
                    <div class="detail detail-large">
                        <h2 class="fw-700 fc-grey-7 padding-bottom-sm-5 padding-bottom-md-10">Your Open Tickets</h2>
                        <div class="text-button fw-700 d-flex align-items-center">
                            <a href="/issues" class="fc-cyan">
                                Go to Tickets
                            </a>
                            <div class="icon icon-divider icon-12 bg-cyan"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="default-box text-center primary-border medium-ticket margin-bottom-10 margin-bottom-sm-30">
                    <div class="detail">
                        <p class="fw-700 padding-top-20 padding-top-md-25 padding-bottom-md-5">Current Bank Balance</p>
                        <span class="fc-grey-7 padding-bottom-20 medium-text d-block">£12,098</span>
                    </div>
                    <div class="text-button fw-700 d-flex align-items-center justify-content-end justify-content-md-center">
                        <a href="/statement" class="fc-cyan">
                            Bank Statement
                        </a>
                        <div class="icon icon-divider icon-12 bg-cyan"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /normal user -->

    <!-- director dashboard -->
    <div class="container padding-bottom-30 padding-bottom-sm-40">
        <div class="row">
            <div class="col-md-9 text-center text-sm-left">
                <h1 class="fc-primary d-sm-inline">Hi Rob.</h1>
                <h1 class="fc-black d-sm-inline">Welcome to your dashboard.</h1>
                <p class="padding-top-15 padding-top-md-10">Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                    Fusce dignissim vehicula facilisis. Nunc enim velit, tempor in pellentesque in, porta eu nisi.</p>
            </div>
        </div>
    </div>

    <div class="container padding-bottom-50 padding-bottom-sm-60 padding-bottom-md-90">
        <div class="row">
            <div class="col-sm-6">
                <div class="default-box primary-border d-flex small-ticket margin-bottom-10 margin-bottom-sm-30">
                    <span class="fc-grey-8 large-text">23</span>
                    <div class="detail detail-large">
                        <h2 class="fw-700 padding-bottom-sm-5 padding-bottom-md-10 fc-grey-7">Your Open Tickets</h2>
                        <div class="text-button fw-700 d-flex align-items-center">
                            <a href="#" class="fc-cyan">
                                Go to Tickets
                            </a>
                            <div class="icon icon-divider icon-12 bg-cyan"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="default-box primary-border d-flex small-ticket margin-bottom-10 margin-bottom-sm-30">
                    <span class="fc-grey-8 large-text">12</span>
                    <div class="detail detail-large">
                        <h2 class="fw-700 padding-bottom-sm-5 padding-bottom-md-10 fc-grey-7">Your Open Projects</h2>
                        <div class="text-button fw-700 d-flex align-items-center">
                            <a href="#" class="fc-cyan">
                                Go to Projects
                            </a>
                            <div class="icon icon-divider icon-12 bg-cyan"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="default-box text-center primary-border medium-ticket margin-bottom-10 margin-bottom-sm-30">
                    <div class="detail">
                        <p class="fw-700 fc-grey-8 padding-top-20 padding-top-md-25 padding-bottom-md-5">Current Bank
                            Balance</p>
                        <span class="fc-black padding-bottom-20 medium-text d-block fc-grey-7">£12,098</span>
                    </div>
                    <div class="text-button fw-700 d-flex align-items-center justify-content-end justify-content-md-center">
                        <a href="#" class="fc-cyan">
                            Bank Statement
                        </a>
                        <div class="icon icon-divider icon-12 bg-cyan"></div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="default-box text-center primary-border medium-ticket margin-bottom-10 margin-bottom-sm-30">
                    <div class="detail">
                        <p class="fw-700 padding-top-20 padding-top-md-25 padding-bottom-md-5 fc-grey-8">Total
                            Commited</p>
                        <span class="padding-bottom-20 medium-text d-block fc-grey-7">£12,098</span>
                    </div>
                    <div class="text-button fw-700 d-flex align-items-center justify-content-end justify-content-md-center">
                        <a href="#" class="fc-cyan">
                            Invoices
                        </a>
                        <div class="icon icon-divider icon-12 bg-cyan"></div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="default-box text-center primary-border medium-ticket margin-bottom-10 margin-bottom-sm-30">
                    <div class="detail">
                        <p class="fw-700 fc-grey-8 padding-top-20 padding-top-md-25 padding-bottom-md-5">Total
                            Arrears</p>
                        <span class="padding-bottom-20 medium-text d-block fc-grey-7">£12,098</span>
                    </div>
                    <div class="text-button fw-700 d-flex align-items-center justify-content-end justify-content-md-center">
                        <a href="#" class="fc-cyan">
                            Debtors Report
                        </a>
                        <div class="icon icon-divider icon-12 bg-cyan"></div>
                    </div>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="default-box info-ticket primary-border d-sm-flex margin-bottom-10 margin-bottom-sm-30 justify-content-center align-items-center text-center">
                    <p class="fw-700 fc-grey-8">Available Balance</p>
                    <span class="fc-grey-7 medium-text">£12,098</span>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="default-box info-ticket primary-border d-sm-flex margin-bottom-10 margin-bottom-sm-30 justify-content-center align-items-center text-center">
                    <p class="fw-700 fc-grey-8">Reserve Fund Balance</p>
                    <span class="fc-grey-7 medium-text">£0,000</span>
                </div>
            </div>
        </div>
        <div class="row dashboard-director">
            <div class="col-md-6">
                <div class="default-box chart primary-border margin-bottom-10 margin-bottom-sm-30 text-center">
                    <div class="detail">
                        <p class="fw-700 padding-top-30 padding-bottom-25 fc-grey-2">Split of Expenditure</p>
                        <div class="ct-chart expenditure-chart"></div>
                        <div class="labels padding-top-25 padding-bottom-25 padding-bottom-sm-30 padding-bottom-md-45 text-left">
                            <div class="label d-flex justify-content-start padding-left-lg-30 padding-left-md-7 align-items-center margin-bottom-10">
                                <span class="circle bg-dark-blue"></span>
                                <p>Element One 25%</p>
                            </div>
                            <div class="label d-flex justify-content-start padding-left-lg-30 padding-left-md-7 align-items-center margin-bottom-10">
                                <span class="circle bg-blue"></span>
                                <p>Element Two 25%</p>
                            </div>
                            <div class="label d-flex justify-content-start padding-left-lg-30 padding-left-md-7 align-items-center margin-bottom-10">
                                <span class="circle bg-cyan"></span>
                                <p>Element Three 13%</p>
                            </div>
                            <div class="label d-flex justify-content-start padding-left-lg-20 align-items-center margin-bottom-10">
                                <span class="circle bg-yellow"></span>
                                <p>Element Four 12%</p>
                            </div>
                            <div class="label d-flex justify-content-start padding-left-lg-20 align-items-center margin-bottom-10">
                                <span class="circle bg-red"></span>
                                <p>Element Five 12%</p>
                            </div>
                            <div class="label d-flex justify-content-start padding-left-lg-20 align-items-center margin-bottom-10">
                                <span class="circle bg-dark-purple"></span>
                                <p>Element Six 13%</p>
                            </div>
                        </div>
                    </div>
                    <div class="text-button fw-700 d-flex align-items-center justify-content-center padding-top-10 padding-bottom-15 padding-top-md-20 padding-bottom-md-20">
                        <a href="#" class="fc-cyan">
                            Budget v Actual
                        </a>
                        <div class="icon icon-divider icon-12 bg-cyan"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="default-box chart primary-border margin-bottom-10 margin-bottom-sm-30 text-center">
                    <div class="detail">
                        <p class="fw-700 padding-top-30 padding-bottom-25 fc-grey-2">Budget Spent in Current Budget
                            Year</p>
                        <div class="ct-chart budget-year-chart"></div>
                        <div class="labels padding-top-25 padding-bottom-25 padding-bottom-sm-30 padding-bottom-md-125 text-left">
                            <div class="label d-flex justify-content-start align-items-center margin-bottom-10">
                                <span class="circle bg-cyan"></span>
                                <p>Spent 75%</p>
                            </div>
                            <div class="label d-flex justify-content-start align-items-center margin-bottom-10">
                                <span class="circle bg-grey-5"></span>
                                <p>Remaining 25%</p>
                            </div>
                        </div>
                    </div>
                    <div class="text-button fw-700 d-flex align-items-center justify-content-center padding-top-10 padding-bottom-15 padding-top-md-20 padding-bottom-md-20">
                        <a href="#" class="fc-cyan">
                            Spend Report
                        </a>
                        <div class="icon icon-divider icon-12 bg-cyan"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- /director dashboard -->


    {% include 'CustomerAppBundle:Partials:error-report.html.twig' %}

{% endblock %}
