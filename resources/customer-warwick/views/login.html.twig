{% block content %}
    <section class="padding-top-40 padding-top-sm-60 padding-top-md-70 padding-bottom-50 padding-bottom-sm-80 padding-bottom-md-90">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-8 offset-lg-3 offset-md-2 text-center">

                    <h1 class="fc-primary padding-bottom-15 padding-bottom-sm-20">
                        Your Warwick Estates Account
                    </h1>
                    {% if error %}
                    <div class="alert alert-danger">
                    {{ error }}
                    </div>
                    {% endif %}
                    <p>Please log in or create your account below.</p>
                    <div class="default-box login-wrapper text-center margin-top-35 margin-top-sm-50">
                        <ul class="tabs tabs-primary tabs-bottom margin-bottom-30">
                            <li class="fs-7 fw-700">
                                <a href="/" class="fc-black active">
                                    Log In
                                </a>
                            </li>
                            <li class="fs-7 fw-700">
                                <a href="/login/create-account" class="fc-grey-5">
                                    Create Account
                                </a>
                            </li>
                        </ul>
                        <form action="{{  path('customer_app_login_check') }}" class="log-in text-center" method="post">
                            <div class="input-group">
                                <label>Customer Reference</label>
                                <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="E.G. 12345-0001">
                            </div>
                            <div class="input-group">
                                <label>Password</label>
                                <input type="password" id="password" name="_password" placeholder="Password">
                            </div>
                            <button type="submit" class="btn btn-cyan">Login</button>
                        </form>
                        <a href="<?=customer_url('login/forgotten')?>"
                           class="fw-700 text-underline padding-top-25 padding-top-sm-35 padding-bottom-30 padding-bottom-sm-40 d-block">Forgot
                            Password?</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

