{% extends "CustomerAppBundle::layout.html.twig" %}


{% block content %}

    {% include 'CustomerAppBundle:Partials:breadcrumb.html.twig' with {'crumblink':'Bank Statement', 'link':'/reports/bank-statement'} %}

    <div class="container padding-bottom-30 padding-bottom-sm-40">
        <div class="row">
            <div class="col-md-9 text-center text-sm-left">
                <h1 class="fc-primary d-sm-inline">Bank Statement</h1>
                <p class="padding-top-15 padding-top-md-10">Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                    Fusce dignissim vehicula facilisis. Nunc enim velit, tempor in pellentesque in, porta eu nisi.</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="d-flex invoice-export margin-top-lg-30">
                    <a href="#" class="btn btn-cyan margin-top-20 margin-top-md-0">Export Report</a>
                </div>
            </div>
        </div>
    </div>


    <div class="container">
        <div class="row">
            <div class="col-12">
                <ul class="tabs tabs-primary tabs-bottom margin-bottom-40 ticket-tabs">
                    <li class="fs-7 fw-700">
                        <a href="#" class="fc-black active">
                            Current Account
                        </a>
                    </li>
                    <li class="fs-7 fw-700">
                        <a href="#" class="fc-grey-5">
                            Reserve Account
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="default-box date-filter text-center margin-bottom-30 margin-bottom-lg-25">
                    <div class="row">
                        <div class="col-md-8 offset-md-2">
                            <p class="fw-500 padding-top-10 d-flex d-lg-inline-flex padding-top-lg-20 justify-content-center justify-content-sm-start">
                                Dates</p>
                            <form method="get" class="d-flex d-md-inline-flex justify-content-center">
                                <select name="taxYear">
                                    {% for year in taxYears %}
                                        <option value="{{ year.key }}"
                                                {% if year.active %}selected="selected"{% endif %}>{{ year.desc }}</option>
                                    {% endfor %}
                                </select>
                                <select>
                                    <option>Option</option>
                                    <option>Option Two</option>
                                    <option>Option Three</option>
                                </select>

                                <input type="submit" value="Apply"
                                       class="btn btn-cyan margin-top-15 margin-top-md-5 margin-top-lg-10 margin-bottom-10 margin-bottom-lg-15 padding-right-50">

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
