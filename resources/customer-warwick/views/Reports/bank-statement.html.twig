{% extends "CustomerAppBundle::layout.html.twig" %}

{% block content %}

<div class="container">
    {% if reserves is not empty %}
    <div class="row">
        {% for reserve in reserves %}
        <div class="panel panel-default">
            <div class="panel-body">
                <p><strong>{{ reserve.getName }} Balance: </strong> &pound;{{ reserve.getFormattedBalance }}</p>
            </div>
        </div>
        {% endfor %}
    </div>
    {% endif %}
    <div class="row">
        <div class="col-md-6">
            <h2>{{title}}</h2>
        </div>
        <div class="col-md-6 text-right">
            <form method="get" action="" class="form-inline">
                <div class="form-group">
                    <select class="form-control input-sm" name="taxYear">
                        {% for year in taxYears %}
                        <option value="{{ year.key }}" {% if year.active%}selected="selected"{% endif %}>{{ year.desc }}</option>
                        {% endfor %}
                    </select>
                </div>
                <button type="submit" class="btn btn-default btn-sm">Update</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-condensed table-bordered">
                <thead>
                    <tr>
                        <th>Account</th>
                        <th>Balance</th>
                    </tr>
                </thead>
                <tbody>
                    {% for balance in balances %}
                    <tr>
                        <td>{{ balance.accountName }}</td>
                        <td class="text-right"><span style="float: left;">&pound;</span>{{ balance.balance|number_format(2, '.', ',') }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-condensed table-bordered data-table" style="font-family: 'courier new', courier, monospace;">
                <thead>
                    <tr>
                        <th>Sort Code</th>
                        <th>Account Number</th>
                        <th>Date</th>
                        <th>Label</th>
                        <th>Amount</th>
                        <th>Balance</th>
                    </tr>
                </thead>
                <tbody>
                    {% for row in rows %}
                    <tr>
                        <td>{{ row.sort_code }}</td>
                        <td>{{ row.account_number }}</td>
                        <td data-sort="{{ row.date|date("Ymd") }}">{{ row.date|date("d-m-Y") }}</td>
                        <td>{{ row.label }}</td>
                        <td data-type="currency" class="text-right"><span style="float: left;">&pound;</span>{{ row.amount|number_format(2, '.', ',') }}</td>
                        <td data-type="currency" class="text-right"><span style="float: left;">&pound;</span>{{ row.balance|number_format(2, '.', ',') }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}
