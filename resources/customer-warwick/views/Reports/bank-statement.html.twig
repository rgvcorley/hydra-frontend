        <div class="row">

            <div class="col-sm-6">
                <div class="default-box info-ticket primary-border d-sm-flex margin-bottom-10 margin-bottom-sm-30 justify-content-center align-items-center text-center">
                    {% for balance in balances %}
                        <p class="fw-700">Budget Total</p>
                        <span class="fc-grey-7 medium-text">&pound;{{ balance.accountName }}</span>
                    {% endfor %}
                </div>
            </div>
            <div class="col-sm-6">
                <div class="default-box info-ticket primary-border d-sm-flex margin-bottom-10 margin-bottom-sm-30 justify-content-center align-items-center text-center">
                    {% for balance in balances %}
                        <p class="fw-700">Total Spend CBY</p>
                        <span class="fc-grey-7 medium-text">&pound;{{ balance.balance|number_format(2, '.', ',') }}</span>
                    {% endfor %}
                </div>
            </div>

        </div>


