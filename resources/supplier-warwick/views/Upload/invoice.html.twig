{% extends 'SupplierAppBundle::layout.html.twig' %}

{% block head %}  

{% endblock %}


{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h2>{{ title }}</h2>

                {% if errors %}
                    <div class="alert alert-danger">
                    {% for error in errors %}
                        <p>{{ error }}</p>
                    {% endfor %}
                    </div>
                {% endif %}

                <form action="{{ path('supplier_invoice_upload', {id: invoice.woNumber}) }}" style="padding-left: 0;" class="col-md-6" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="wo_number">WO Number</label>
                        {{ form_widget(form.woNumber, { 'attr': {'class': 'form-control selectpicker select-form select-full', 'data-live-search': 'true'} }) }}
                    </div>

                    <div class="form-group">
                        <label for="invoice_number">Invoice Number</label>
                        {{ form_widget(form.invoiceNumber, { 'attr': {'class': 'form-control'} }) }}
                    </div>

                    <div class="form-group">
                        <label for="invoice_date">Invoice Date</label>
{#                         {{ form_widget(form.invoiceDate, { 'attr': {'class': 'form-control datepicker', 'data-date-start-date': '01/01/2015', 'data-date-format': 'dd/mm/yyyy'} }) }} #}
                        {{ form_widget(form.invoiceDate, { 'attr': {'class': 'form-control datepicker'} }) }}
                    </div>

                    <div class="form-group">
                        <label for="invoice_amount">Invoice Amount (inc. VAT)</label>
                        {{ form_widget(form.invoiceAmount, { 'attr': {'class': 'form-control'} }) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.file) }}
                    </div>

                    {{ form_widget(form._token) }}

                    <button type="submit" class="btn btn-danger">Upload</button>
                </form>
            </div>
            <div class="col-md-4">
                <h3>Invoices</h3>
                <p>This service will allow you to provide your latest invoices quickly, easily and without having to print and post a paper copy.</p>
                <p>Please make sure you enter all the information accurately.</p>

                <h3>Allowed Files</h3>
                <dl>
                    <dt>PDF</dt>
                    <dd>PDF files no larger than 3MB are allowed.</dd>

                    <dt>PNG</dt>
                    <dd>PNG files no larger than 1MB are allowed.</dd>

                    <dt>JPG</dt>
                    <dd>JPG/JPEG files no larger than 1MB are allowed.</dd>

                    <dt>Word Document</dt>
                    <dd>DOC/DOCX files no larger than 3MB are allowed.</dd>

                    <dt>Rich Text Format</dt>
                    <dd>RTF files no larger than 3MB are allowed.</dd>
                </dl>
            </div>
        </div>
    </div>

{% endblock %}
