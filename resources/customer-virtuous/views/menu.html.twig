    <div class="container">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="row">
            <ul class="nav nav-pills">
                <li class="{% if activePage == "home" %}active{% endif %}"><a target="_self" href="/" title="Home">Home</a></li>

                {% if is_granted('ROLE_CUSTOMER|PAY') %}
                <li class="{% if activePage == "payments" %}active{% endif %}"><a target="_self" href="/payments" title="Make Payment">Make Payment</a></li>
                {% endif %}

                {% if is_granted('ROLE_CUSTOMER|REPORTS') %}
                <li>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Reports <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">

                        {% if is_granted('ROLE_CUSTOMER|STATEMENT') %}
                        <li class="{% if activePage == "statement" %}active{% endif %}" role="presentation"><a href="/statement" title="Statement of Account">Statement of Account</a></li>
                        {% endif %}

                        {% if is_granted('ROLE_CUSTOMER|REPORTS|BANK') %}
                        <li class="{% if activePage == "bank" %}active{% endif %}" role="presentation"><a href="/reports/bank-statement" title="Bank Statement" class="action ">Bank Statement</a></li>
                        {% endif %}

                        {% if is_granted('ROLE_CUSTOMER|REPORTS|DEBTORS') %}
                        <li class="{% if activePage == "debtors" %}active{% endif %}" role="presentation"><a href="/reports/debtors" title="Debtors Report" class="action ">Debtors Report</a></li>
                        {% endif %}

                        {% if is_granted('ROLE_CUSTOMER|REPORTS|SPEND') %}
                        <li class="{% if activePage == "spend" %}active{% endif %}" role="presentation"><a href="/reports/spend" title="Spend Report" class="action ">Spend Report</a></li>
                        {% endif %}

                        {% if is_granted('ROLE_CUSTOMER|REPORTS|BUDGETSPEND') %}
                        <li class="{% if activePage == "budgetspend" %}active{% endif %}" role="presentation"><a href="/reports/budget-versus-spend" title="Budget vs Spend" class="action ">Budget vs Spend</a></li>
                        {% endif %}
                    </ul>
                </li>
                {% else %}
                
                    {% if is_granted('ROLE_CUSTOMER|STATEMENT') %}
                    <li class="{% if activePage == "statement" %}active{% endif %}"><a target="_self" href="/statement" title="Statement of Account">Statement of Account</a></li>
                    {% endif %}
                
                {% endif %}

                {% if is_granted('ROLE_CUSTOMER|DOCUMENTS') %}
                <li class="{% if activePage == "documents" %}active{% endif %}"><a target="_self" href="/documents" title="Downloads">Documents</a></li>
                {% endif %}

                {% if is_granted('ROLE_CUSTOMER|ISSUES') %}
                <li class="{% if activePage == "issues" %}active{% endif %}"><a target="_self" href="/issues" title="Issues">Issues</a></li>
                {% endif %}

                {% if is_granted('ROLE_CUSTOMER|ACCOUNT') %}
                <li class="{% if activePage == "account" %}active{% endif %}"><a target="_self" href="/account" title="Account Details">Account Details</a></li>
                {% endif %}

                <li><a href="/logout">Logout</a></li>
            </ul>
        </div>
        <hr>
        {% endif %}
    </div>
