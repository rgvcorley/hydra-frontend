{% extends "CustomerAppBundle::layout.html.twig" %}

{% block content %}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Documents</h2>
            <p>Here you can download documents relating to your property.</p>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            {% if message %}
                <div class="alert alert-warning">{{ message }}</div>
            {% endif %}
            {% for row in rows %}
            <div class="panel panel-danger" style="border-color:#DDD;">
              <div class="panel-body">
                  <a href="{{ path('customer_app_doc_download', {id: row.document_id}) }}" class="btn btn-danger btn-large pull-right">Download</a>
                  <strong>{{ row.filename }}</strong><br>
                  <small>{{ row.description }}</small>
              </div>
              <div class="panel-footer" style="padding:5px 15px">
                  <small><strong>Size:</strong> {{ row.size }}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<strong>Date Uploaded:</strong> {{ row.date_uploaded|date("d/m/Y") }}</small>
              </div>
          </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}
