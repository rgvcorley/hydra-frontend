{% extends "CustomerAppBundle::layout.html.twig" %}

{% block content %}

    <section class="content">
        <div class="container">
            <h1>Documents</h1>
            <p>Here you can download documents relating to your property.</p>

            {% if message %}
                <div class="alert alert--warning">{{ message }}</div>
            {% endif %}

            {% for row in rows %}
                <div class="panel panel-danger">
                    <div class="panel-body">
                        <a class="button" href="{{ path('customer_app_doc_download', {id: row.document_id}) }}" title="Download file">Download</a>
                        <strong>{{ row.filename }}</strong><br>
                        <small>{{ row.description }}</small>
                    </div>
                    <div class="panel-footer">
                        <small><strong>Size:</strong> {{ row.size }} <strong>Date Uploaded:</strong> {{ row.date_uploaded|date("d/m/Y") }}</small>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}
